            $("#itIdCliente").val(id);
            $("#itNombre").val(nombre);
            $("#itDireccion").val(direccion);
            $("#itApellido").val(apellido);
            $("#itTelefono").val(telefono);
            $("#itCi").val(ci);
            $("#itCorreo").val(correo);
        }

