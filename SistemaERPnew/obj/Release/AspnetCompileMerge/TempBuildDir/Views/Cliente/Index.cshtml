        function Registro() {

            if ($("#itNombre").val().length === 0) {
                return MostrarMensaje("Debe registrar un Nombre");
            }
            if ($("#itDireccion").val().length === 0) {
                return MostrarMensaje("Debe registrar una Direccion");
            }
            if ($("#itTelefono").val() == 0) {
                return MostrarMensaje("Debe registrar un Telefono");
            }
            if ($("#itIdCliente").val().length === 0) {

                $.ajax({
                    url: "@Url.Action("Registro", "Cliente")",
                    cache: false,
                            type: "POST",
                            dataType: "script",
                            data: {

                                nombre: $("#itNombre").val(),
                                direccion: $("#itDireccion").val(),
                                apellido: $("#itApellido").val(),
                                telefono: $("#itTelefono").val(),
                                ci: $("#itCi").val(),
                                correo: $("#itCorreo").val()



                    }, success: function () {

                    }
                });



            } else {


                 $.ajax({
                    url: "@Url.Action("Editar", "Cliente")",
                    cache: false,
                            type: "POST",
                            dataType: "script",
                            data: {
                                id: $("#itIdCliente").val(),
                                nombre: $("#itNombre").val(),
                                direccion: $("#itDireccion").val(),
                                apellido: $("#itApellido").val(),
                                telefono: $("#itTelefono").val(),
                                    ci: $("#itCi").val(),
                                correo: $("#itCorreo").val()


                    }, success: function () {


                    }
                });

            }

        }

        function ObtenerCliente(id) {


            $.ajax({
                url: "@Url.Action("ObtenerCliente", "Cliente")",
                cache: false,
                type: "POST",
                dataType: "json",
                data: {
                    idcliente: id

                }, success: function (result) {
                    $("#itIdCliente").val(result.Data.idCliente);
                    $("#itNombre").val(result.Data.Nombre);
                    $("#itDireccion").val(result.Data.Direccion);
                    $("#itApellido").val(result.Data.Apellido);
                    $("#itTelefono").val(result.Data.Telefono);
                    $("#itCi").val(result.Data.Ci);
                    $("#itCorreo").val(result.Data.Correo);

                        $("#tituloEmpresa").html("Modificar Cliente");
                        $("#modalEmpresa").modal('show');

                }

            })

        }

        var Id = null;

        function AbrirModalEliminar(id,nombre) {

            Id = id;
           // $("#mensaje").hide();
                if (Id == null) {
                       return MostrarMensaje("Debe seleccionar un Cliente");
                }

            var mesjModalEliminar = "¿Esta seguro que deseas eliminar El Cliente " + nombre + " ?";
