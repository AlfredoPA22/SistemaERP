        function Eliminar() {

                if ( Id == null) {
                       return MostrarMensaje("Debe seleccionar un Cliente");
                }

                $.ajax({
                        url: "@Url.Action("Eliminar", "Cliente")",
                        cache: false,
                                type: "POST",
                                dataType: "script",
                    data: {
                        id: Id
                    }

                });
         }

        function AbrirModalRegistro() {
           // $("#mensaje").hide();
