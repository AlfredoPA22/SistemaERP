@using Datos;
@using Entidad.Estados;
@using Entidad;
@model List<ENroSerie>
@{
    
}
<div style="max-height:500px; overflow: scroll;">
    <table class="table table-bordered table-hover table-head-fixed" id="tabla_detalleComprobante">
        <thead>
            <tr>
                <th style="width:40%; text-align:left;">Nro</th>
                <th style="width:15%; text-align:center;">Producto</th>
                <th style="width:30%; text-align:center;">NroSerie</th>
                <th style="width:15%; text-align:center;"></th>

            </tr>
        </thead>
        <tbody>
            @{
                foreach (var i in Model)
                {
                    <tr id="idtrlote">
                        <td>@i.Nro</td>
                        <td style="text-align:right;">@i.Articulo</td>
                        <td style="text-align:right;">@i.NroSerie</td>
                        <td style="text-align:center">

                                    <a class="btn btn-danger" onclick="AbrirModalEliminarSerie('@i.Nro', '@i.IdArticulo', '@i.Articulo', '@i.NroSerie')">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                                            <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z" />
                                        </svg>
                                    </a>

                        </td>

                    </tr>

                }


            }
        </tbody>
    </table>

</div>

